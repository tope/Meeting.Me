<h1>Login</h1>

<%= flash_notice %>

<div	class="form">
  <fieldset>
  <legend>Enter email/password</legend>
  <% form_tag :action => "create" do %>
    <div>
      <label for="email">Email: </label><br />
      <%= text_field_tag :email, params[:email], :class => "short" %>
    </div>
    <div>
      <label for="password">Password: </label><br />
      <%= password_field_tag :password, params[:password], :class => "short" %>
    </div>
    <%= submit_tag "Login" %>
  <% end %>
  </fieldset>
</div>